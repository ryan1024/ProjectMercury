@model Mercury.Backoffice.Models.RaceEventViewModel
@{
    ViewBag.Title = "Race Event Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a>Race</a>
            </li>
            <li>
                <a>Event</a>
            </li>
            <li class="active">
                <strong>View</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        @*<div class="col-lg-12">*@
        <div class="ibox ">
            <div class="ibox-title">
                @*<h5>Search</h5>*@
                <p>
                    @Html.ActionLink("Edit", "RaceEventEdit", new { id = Model.EventId }) |
                    @Html.ActionLink("Back to List", "RoleList")
                </p>
            </div>
            <div class="ibox-content">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.EventName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.EventName)
                    </dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.EventVenue)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.EventVenue)
                    </dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.EventOrganiser)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.EventOrganiser)
                    </dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.EventStartOn)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.EventStartOn)
                    </dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.EventEndOn)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.EventEndOn)
                    </dd>
                </dl>

            </div>
        </div>
        @*</div>*@
    </div>
</div>

