@model Mercury.Backoffice.Models.ApplicationUser
@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a>Management</a>
            </li>
            <li>
                <a>User</a>
            </li>
            <li class="active">
                <strong>Delete</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        @*<div class="col-lg-12">*@
        <div class="ibox ">
            <div class="ibox-title">
                @*<h5>Search</h5>*@
                @Html.ActionLink("Back to List", "UserList")
            </div>
            <div class="ibox-content">
                <h3>Are you sure you want to delete this User?</h3>
                <div>
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-1" })
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-1 col-md-4">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Delete" class="btn btn-default" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*</div>*@
        </div>
    </div>
</div>