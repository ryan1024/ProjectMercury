@model Mercury.Backoffice.Models.RegisterViewModel
@{
    ViewBag.Title = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a>Management</a>
            </li>
            <li>
                <a>User</a>
            </li>
            <li class="active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        @*<div class="col-lg-12">*@
        <div class="ibox ">
            <div class="ibox-title">
                @*<h5>Search</h5>*@
                <div>
                    @Html.ActionLink("Back to List", "UserList")
                </div>
            </div>
            <div class="ibox-content">
                @using (Html.BeginForm("UserCreate", "Management", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-error" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-1 control-label" })
                        <div class="col-md-11">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-1" })
                        <div class="col-md-11">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.City, new { @class = "control-label col-md-1" })
                        <div class="col-md-11">
                            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.State, new { @class = "control-label col-md-1" })
                        <div class="col-md-11">
                            @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PostalCode, new { @class = "control-label col-md-1" })
                        <div class="col-md-11">
                            @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-1 control-label" })
                        <div class="col-md-11">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-1 control-label" })
                        <div class="col-md-11">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-1 control-label">
                            Select User Role
                        </label>
                        <div class="col-md-11">
                            @foreach (var item in (SelectList)ViewBag.RoleId)
                            {
                                <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                                @Html.Label(item.Value, new { @class = "control-label" })
                                <span>&nbsp;&nbsp;</span>
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-11">
                            <input type="submit" class="btn btn-default" value="Create" />
                        </div>
                    </div>
                }
            </div>
        </div>
        @*</div>*@
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
