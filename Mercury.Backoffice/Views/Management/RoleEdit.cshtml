@model Mercury.Backoffice.Models.RoleViewModel
@{
    ViewBag.Title = "Edit User Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a>Management</a>
            </li>
            <li>
                <a>User Role</a>
            </li>
            <li class="active">
                <strong>Edit</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        @*<div class="col-lg-12">*@
        <div class="ibox ">
            <div class="ibox-title">
                @*<h5>Search</h5>*@
                <div>
                    @Html.ActionLink("Back to List", "RoleList")
                </div>
            </div>
            <div class="ibox-content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-1" })
                            <div class="col-md-11">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-1" })
                            <div class="col-md-11">
                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-1 col-md-11">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="ibox-content">
                <h4>List of users in this role</h4>
                @if (ViewBag.UserCount == 0)
                {
                    <hr />
                    <p>No users found in this role.</p>
                }
                <table class="table">
                    @foreach (var item in ViewBag.Users)
                    {
                        <tr>
                            <td>
                                <i class="fa fa-dot-circle-o"></i>&nbsp;@item.UserName
                            </td>
                        </tr>
                    }
                </table>


            </div>
        </div>
        @*</div>*@
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
