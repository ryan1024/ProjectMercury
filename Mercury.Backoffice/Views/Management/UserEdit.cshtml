@model Mercury.Backoffice.Models.EditUserViewModel
@{
    ViewBag.Title = "Edit User Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a>Management</a>
            </li>
            <li>
                <a>User</a>
            </li>
            <li class="active">
                <strong>Edit</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        @*<div class="col-lg-12">*@
        <div class="ibox ">
            <div class="ibox-title">
                @*<h5>Search</h5>*@
                <div>
                    @Html.ActionLink("Back to List", "UserList")
                </div>
            </div>
            <div class="ibox-content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-1" })
                            <div class="col-md-11">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-1" })
                            <div class="col-md-11">
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.City, new { @class = "control-label col-md-1" })
                            <div class="col-md-11">
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.State, new { @class = "control-label col-md-1" })
                            <div class="col-md-11">
                                @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PostalCode, new { @class = "control-label col-md-1" })
                            <div class="col-md-11">
                                @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Roles", new { @class = "control-label col-md-1" })
                            <span class="col-md-11">
                                @foreach (var item in Model.RolesList.OrderBy(x => x.Text))
                                {
                                    <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                                    @Html.Label(item.Value, new { @class = "control-label" })
                                    <span>&nbsp;&nbsp;</span>
                                }
                            </span>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-1 col-md-11">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        @*</div>*@
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
