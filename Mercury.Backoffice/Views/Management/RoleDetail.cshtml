@model Mercury.Backoffice.Models.ApplicationRole
@{
    ViewBag.Title = "User Role Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a>Management</a>
            </li>
            <li>
                <a>User Role</a>
            </li>
            <li class="active">
                <strong>View</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        @*<div class="col-lg-12">*@
        <div class="ibox ">
            <div class="ibox-title">
                @*<h5>Search</h5>*@
                <p>
                    @Html.ActionLink("Edit", "RoleEdit", new { id = Model.Id }) |
                    @Html.ActionLink("Back to List", "RoleList")
                </p>
            </div>
            <div class="ibox-content">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                </dl>

            </div>

            <div class="ibox-content">
                <h4>List of users in this role</h4>
                @if (ViewBag.UserCount == 0)
                {
                    <hr />
                    <p>No users found in this role.</p>
                }
                <table class="table">
                    @foreach (var item in ViewBag.Users)
                    {
                        <tr>
                            <td>
                                <i class="fa fa-dot-circle-o"></i>&nbsp;@item.UserName
                            </td>
                        </tr>
                    }
                </table>

                
            </div>
        </div>
        @*</div>*@
    </div>
</div>





