@using Mercury.Web.Tractivo.Models
@model LoginRegisterViewModel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<!-- Banner -->
<div class="container-fluid">
    <section id="banner">
        <!--
            ".inner" is set up as an inline-block so it automatically expands
            in both directions to fit whatever's inside it. This means it won't
            automatically wrap lines, so be sure to use line breaks where
            appropriate (<br />).
        -->
        <div class="inner">
            <p>
                <a href="#Race" class="scrolly" style="color:red;">Race</a> . <a href="#Track" class="scrolly" style="color:yellow;">Track</a> . <a href="#Improve" class="scrolly" style="color:green;">Improve</a>
            </p>
            <header>
                <h2>Tractivo</h2>
            </header>
            

            @*<footer>
                <ul class="buttons dl-horizontal">
                    <li><a href="#" class="button fit scrolly" id="register-form-link">Sign-up Now</a></li>
                    <li><a href="#" class="button fit scrolly" id="login-form-link">Login</a></li>
                    <li><a href="#" class="active" id="register-form-link">Sign-up</a></li>
                    <li><a href="#" id="login-form-link">Login</a></li>
                </ul>
            </footer>*@
            @*<div class="row text-center">*@<div>
                <div class="center-block">
                    <div class="panel">
                        <div class="panel-body">
                            @*<div class="row">*@<div>
                                <div class="col-lg-12">
                                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @*<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" value="">*@
                                            @Html.TextBoxFor(m => m.LoginViewModel.Email, new { @class = "form-control", @placeholder = "Username", @tabindex = "1" })
                                            @Html.ValidationMessageFor(m => m.LoginViewModel.Email, "", new { @class = "text-danger" })

                                        </div>
                                        <div class="form-group">
                                            @*<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password">*@
                                            @Html.PasswordFor(m => m.LoginViewModel.Password, new { @class = "form-control", @placeholder = "Password", @tabindex = "2" })
                                            @Html.ValidationMessageFor(m => m.LoginViewModel.Password, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group text-center">
                                            <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                            <label for="remember"> Remember Me</label>
                                        </div>
                                        <div class="form-group">
                                            @*<div class="row">*@
                                            <div>
                                                <div class="col-sm-12">
                                                    <input type="submit" name="login-submit" id="login-submit" tabindex="4"  value="Log In">
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <div class="form-group">
                                        @*<div class="row">*@
                                        <div>
                                            <div class="col-lg-12">
                                                <div class="text-center">
                                                    @Html.ActionLink("Forgot Password?", "ForgotPassword", "Account")
                                                    @*<a href="http://phpoll.com/recover" tabindex="5" class="forgot-password">Forgot Password?</a>*@
                                                    <br /><br />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @*<div class="row">*@
                                        <div>
                                            <div>
                                                <a href="#SignUp" class="scrolly">
                                                    <input type="submit" tabindex="4" class="form-control" value="Sign up Now">
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>

<!-- Sign up -->
<div class="container-fluid">
    <section id="SignUp">
        <header class="special">
            <h2>
                Create an account
            </h2>
        </header>
        <div class="form-inline">
            <div class="">

                <div class="col-lg-12">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @*<h4>Create a new account.</h4>*@
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            @*@Html.LabelFor(m => m.RegisterViewModel.Email, new { @class = "col-md-2 control-label" })*@
                            <div class="col-md-5">
                                @Html.TextBoxFor(m => m.RegisterViewModel.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                            </div>
                            <div class="col-md-offset-5 col-md-5">
                                @Html.TextBoxFor(m => m.RegisterViewModel.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                            </div>
                        </div>
                        <div class="form-group">
                            @*@Html.LabelFor(m => m.RegisterViewModel.Email, new { @class = "col-md-2 control-label" })*@
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.RegisterViewModel.Email, new { @class = "form-control", @placeholder = "Email" })
                            </div>
                        </div>
                        <div class="form-group">
                            @*@Html.LabelFor(m => m.RegisterViewModel.Password, new { @class = "col-md-2 control-label" })*@
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.RegisterViewModel.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        @*<div class="form-group">
                            @Html.LabelFor(m => m.RegisterViewModel.ConfirmPassword, new { @class = "col-md-2 control-label" })
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.RegisterViewModel.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>*@
                        <div class="form-group">
                            <div class="col-md-12">
                                <br />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" class="btn btn-default" value="Register" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
</section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

    </script>
}
